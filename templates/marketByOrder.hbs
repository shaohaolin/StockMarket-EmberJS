<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 market-title-bar">
            <h1 id="market-title">{{model.companyName}}</h1>
        </div>
        <div class="col-md-4">
            <h3>Market By Order</h3>
            <div class="row">
                <div class="col-md-4">
                    <table class="table table-bordered buyByOrder">
                        <thead>
                        <tr>
                            <th colspan="2">Buy</th>
                        </tr>
                        <tr>
                            <th>Volume</th>
                            <th>Price</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each buyOrder in model.buyOrders}}
                            <tr>
                                <th>{{buyOrder.bidVolume}}</th>
                                <th>${{buyOrder.bidPrice}}</th>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>

                <div class="col-md-4 col-md-offset-2">
                    <table class="table table-bordered sellByOrder">
                        <thead>
                        <tr>
                            <th colspan="2">Sell</th>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <th>Volume</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            {{#each buyOrder in model.sellOrders}}
                                <th>${{buyOrder.sellPrice}}</th>
                                <th>{{buyOrder.sellVolume}}</th>
                            {{/each}}
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{partial "marketByPrice"}}
    </div>
</div>